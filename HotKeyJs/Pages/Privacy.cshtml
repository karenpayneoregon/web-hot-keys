@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="container">

    <h3>Privacy</h3>

    <form method="post" id="main-content" autocomplete="off">
        <div>
            <label for="firstName" class="col-sm-2">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control w-50" name="Name" id="firstName" placeholder="First name">
            </div>
        </div>

        <div>
            <label for="Surname" class="col-sm-2">Surname</label>
            <div class="col-sm-10">
                <input type="text" class="form-control w-50" name="Surname" id="Surname" placeholder="Last name">
            </div>
        </div>

        <div class="mt-2">
            <div class="col-sm-10">

                <button type="submit"
                        id="btn-submit"
                        class="btn btn-outline-dark"
                        aria-keyshortcuts="Ctrl+Q">
                    Enter
                </button>

            </div>
        </div>

    </form>
    
    <div class="form-check mt-3 ms-1" style="width: 15em">
        <input class="form-check-input" type="checkbox" value="" id="promptCheckBox">
        <label class="form-check-label" for="promptCheckBox">
            Prompt on leave
        </label>
    </div>


</div>


<div>
    @await Html.PartialAsync("_KeyMapper")
</div>

@section Scripts
{
    <script>

        $(document).ready(function (e) {
            $Application.setPrivacyPageKeys();
        });

        window.addEventListener('beforeunload', (event) => {
            if (document.getElementById("promptCheckBox").checked === true) {
                event.returnValue = `Are you sure you want to leave?`;
            }
            
        });
    </script>
}
